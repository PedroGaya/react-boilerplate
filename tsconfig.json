{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"~/*": ["src/*"]
		},
		"target": "es2016",
		"esModuleInterop": true,
		"skipLibCheck": true,
		// Typing
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true
	},
	"include": ["src/**/*", "src/App.tsx"],
	"exclude": ["node_modules"]
}
